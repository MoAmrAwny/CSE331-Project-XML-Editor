#include "network_analysis.h"

int main(){
    //ifstream in("C:/Users/Jana Aly/ProjectDSA/sample.xml");
    string inputname="C:/Users/Jana Aly/ProjectDSA/cmake-build-debug/output10.xml";
    vector<string>command={"xml_editor","mutual", "-i", "input_file.xml" ,"-ids","1,2"};
    if(command[1]=="most_active") {
        vector<user> users=xmlToGraph(inputname);
        vector<pair<string,int>> Active_Users=MostActive(users);
    }
    else if(command[1]=="most_influencer") {
        vector<user> users=xmlToGraph(inputname);
        vector<pair<string,int>>Mostinfluencer = MostInfluencer(users);
    }
    else if(command[1]=="mutual") {
        vector<user> users=xmlToGraph(inputname);
        vector<string>ids;
        stringstream ss(command[5]);
        string token;
        while (getline(ss, token, ',')) {
            ids.push_back(token);
        }
        vector<pair<string,int>> Mutual_Users=MutualUsers(users,ids);
        if(Mutual_Users.empty()) {
           cout<<"No Mutuals Found!"<<endl;
        }
    }
    else if(command[1]=="suggest") {
        vector<user> users=xmlToGraph(inputname);
        vector<pair<string,int>> SuggestedFollwers=SuggestFollowers(users,command[5]);
    }

        return 0;
}
